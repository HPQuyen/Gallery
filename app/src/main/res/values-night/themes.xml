<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="DefaultAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="themeName">DarkTheme</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary_sub</item>
        <item name="colorPrimaryVariant">@color/colorVariant_1_sub</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_sub</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary_main</item>
        <item name="colorSecondaryVariant">@color/colorVariant_1_main</item>
        <item name="colorOnSecondary">@color/colorOnPrimary_main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorVariant_1_sub</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>

        <item name="popupMenuBackground">@color/colorVariant_1_sub</item>

        <item name="android:itemTextAppearance">@style/ItemTextAppearance</item>
        <item name="android:actionOverflowButtonStyle">@style/MoreSettings</item>

        <item name="android:textColorPrimary">@color/colorOnPrimary_main</item>
        <item name="android:textColorSecondary">@color/colorOnPrimary_sub</item>

    </style>

    <style name="MoreSettings">
        <item name="android:src">@drawable/ic_more_settings_vertical</item>
    </style>

    <style name="ItemTextAppearance">
        <item name="android:textColor">@color/colorOnPrimary_main</item>
    </style>

</resources>